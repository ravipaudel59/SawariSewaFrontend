<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="#30336B"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvusername"
        android:layout_width="156dp"
        android:layout_height="23dp"
        android:textColor="@color/gradient"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvbusinessName"
        android:layout_width="156dp"
        android:layout_height="23dp"
        android:textColor="@color/gradient"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="BusinessName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvusername" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="154dp"
        android:textColor="@color/gradient"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:hint="Phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvbusinessName" />
    <TextView
        android:id="@+id/tvaddress"
        android:layout_width="160dp"
        android:textColor="@color/gradient"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:hint="Address"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhone" />
    <TextView
        android:id="@+id/tvlocationlat"
        android:layout_width="154dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:textColor="@color/gradient"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:hint="Latitude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvaddress" />

    <TextView
        android:id="@+id/tvlocationlong"
        android:layout_width="154dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:textColor="@color/gradient"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:hint="Longitude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvlocationlat" />

    <TextView
        android:id="@+id/showmore"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/show_more_logo"
        android:backgroundTint="@color/gradient"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvlocationlong" />

    <TextView
        android:id="@+id/btncall"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:backgroundTint="@color/gradient"
        android:background="@drawable/call_logo"
        app:layout_constraintStart_toEndOf="@+id/showmore"
        app:layout_constraintTop_toBottomOf="@+id/tvlocationlong" />
    <TextView
        android:id="@+id/btnFeedback"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:backgroundTint="@color/gradient"
        android:background="@drawable/feedback_logo"
        app:layout_constraintStart_toEndOf="@+id/btncall"
        app:layout_constraintTop_toBottomOf="@+id/tvlocationlong" />


    <TextView
        android:id="@+id/btnmap"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:backgroundTint="@color/gradient"
        android:background="@drawable/ic_baseline_map_24"
        app:layout_constraintBottom_toTopOf="@+id/btnFeedback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toEndOf="@+id/tvaddress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.461" />


</androidx.constraintlayout.widget.ConstraintLayout>